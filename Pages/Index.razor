@page "/"
@inject UserSessionService SessionService

<PageTitle>AWE Electronics Store</PageTitle>

@if (SessionService.IsAdmin)
{
    <!-- Admin Homepage -->
    <div class="container py-5">
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-dark">🔧 Welcome, Admin</h1>
                <p class="lead text-muted">
                    Take control of the AWE Electronics ecosystem. Manage products, track performance, and empower customer experiences—all in one place.
                </p>
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <a class="btn btn-lg btn-success" href="/admin/addproducts">➕ Add Product</a>
                    <a class="btn btn-lg btn-primary" href="/admin/reports">📊 View Reports</a>
                    <a class="btn btn-lg btn-outline-secondary" href="/products">🛒 View Storefront</a>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img src="images/admin-dashboard.jpg" alt="Admin Panel" class="img-fluid rounded shadow-sm" />
            </div>
        </div>

        <div class="row text-center mb-5">
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-success">📦 Inventory</h4>
                    <p>Monitor stock levels and update listings in real-time.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-primary">📈 Sales Insights</h4>
                    <p>Generate quick analytics and understand sales trends.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-danger">👥 User Management</h4>
                    <p>Ensure secure and seamless user access across the platform.</p>
                </div>
            </div>
        </div>

        <footer class="text-center mt-5">
            <p class="text-muted">© 2025 AWE Electronics | Admin Portal</p>
        </footer>
    </div>
}
else
{
    <!-- Customer Homepage -->
    <div class="container py-5">
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-primary">AWE Electronics</h1>
                <p class="lead text-muted">
                    Discover innovation like never before. Shop the latest in tech, gadgets, and smart devices—all in one place.
                </p>
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <a class="btn btn-lg btn-success" href="/products">🛍️ Start Shopping</a>
                    <a class="btn btn-lg btn-outline-primary" href="/underconstruction">📘 Learn More</a>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img src="images/hero.jpg" alt="Electronics Banner" class="img-fluid rounded shadow-sm" />
            </div>
        </div>

        <div class="row text-center mb-5">
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-success">🚀 Fast Delivery</h4>
                    <p>Enjoy lightning-fast shipping on all orders, nationwide.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-primary">💡 Latest Gadgets</h4>
                    <p>Be the first to access the latest and greatest in tech.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-4">
                    <h4 class="text-warning">🔒 Secure Checkout</h4>
                    <p>Shop confidently with our secure payment system, including Paypal.</p>
                </div>
            </div>
        </div>

        <div class="row align-items-center my-5">
            <div class="col-md-6 text-center">
                <img src="images/tech-mission.jpg" alt="Tech Mission" class="img-fluid rounded shadow-sm" />
            </div>
            <div class="col-md-6">
                <h3 class="fw-bold">Our Mission</h3>
                <p>
                    At AWE Electronics, we believe in making technology accessible, powerful, and inspiring. From everyday essentials to futuristic tools, we’re here to electrify your world.
                </p>
                <ul class="list-unstyled text-muted">
                    <li>✔️ Trusted by thousands of tech enthusiasts</li>
                    <li>✔️ 24/7 Customer Support</li>
                    <li>✔️ Affordable & Quality Assured</li>
                </ul>
            </div>
        </div>

        <footer class="text-center mt-5">
            <p class="text-muted">© 2025 AWE Electronics | Powered by Innovation</p>
        </footer>
    </div>
}
