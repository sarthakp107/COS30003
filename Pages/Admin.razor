@page "/admin"
@inject UserSessionService SessionService

@if (!SessionService.IsAdmin)
{
    <div class="alert alert-danger mt-5 text-center">
        <h4 class="alert-heading">Access Denied</h4>
        <p>You are not authorized to access this page.</p>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header bg-dark text-white text-center rounded-top-4">
                        <h3 class="mb-0">⚙️ Admin Control Panel</h3>
                    </div>
                    <div class="card-body py-5 bg-light text-center">
                        <p class="mb-4 fs-5">Welcome! Choose an action to perform:</p>

                        <div class="row g-4 justify-content-center">
                            <div class="col-md-5">
                                <NavLink class="btn btn-success btn-lg w-100 py-3 shadow-sm rounded-3" href="/admin/addproducts">
                                    <i class="bi bi-plus-circle me-2"></i> Add New Product
                                </NavLink>
                            </div>
                            <div class="col-md-5">
                                <NavLink class="btn btn-primary btn-lg w-100 py-3 shadow-sm rounded-3" href="/admin/reports">
                                    <i class="bi bi-bar-chart-line me-2"></i> View Reports
                                </NavLink>
                            </div>
                        </div>

                        <div class="mt-5">
                            <span class="text-muted small">🔐 Warning: Authorised Administrators Only! </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
